datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
generator client {
  provider = "prisma-client-js"
}

enum Role {
  ADMIN
  SHOPPER
  STORE
}

model User {
  id            String          @id @default(auto()) @map("_id") @db.ObjectId
  email         String?         @unique
  password      String?
  role          Role            @default(SHOPPER)
  UUID          String          @default(cuid()) @unique
}


